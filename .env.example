# 数据库配置
DATABASE_URL=postgresql://user:password@192.168.0.10:5432/postgres?schema=public

# Redis配置 - 用于Bull.js队列
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="pwd@redis"
REDIS_DB="0"

# SMTP邮件配置
SMTP_HOST="smtp.xxx.com"
SMTP_PORT="465"
SMTP_SECURE="false"
SMTP_USER="your_smtp_username"
SMTP_PASSWORD="your_smtp_password"
SMTP_FROM_NAME="AiCoder"
SMTP_FROM_EMAIL="your_email@example.com"

# Next.js configuration
NEXT_PUBLIC_APP_NAME=AiCoder
NEXT_PUBLIC_APP_DESCRIPTION=AiCoder is a free and open-source code editor for developers.

# Application configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
APP_ENV="development"
NEXTAUTH_SECRET="your_nextauth_secret_key_here_32_chars_min"
NEXTAUTH_URL="http://localhost:3000"

# 文件上传配置
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="104857600"  # 100MB in bytes

# ===========================================
# OAuth 第三方登录配置 (可选)
# ===========================================
# Google OAuth 2.0
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# WeChat OAuth (微信开放平台)
WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

# 邮件队列配置
QUEUE_CONCURRENCY="5"
QUEUE_MAX_RETRY="3"
QUEUE_RETRY_DELAY="60000"  # 1 minute in milliseconds

# 安全配置
JWT_SECRET="your_jwt_secret_key_here_must_be_32_chars_minimum"
BCRYPT_ROUNDS="12"

# Token过期时间配置
ACCESS_TOKEN_EXPIRES_IN=2h
REFRESH_TOKEN_EXPIRES_IN=7d

# JWT密钥配置
JWT_ACCESS_SECRET=your_jwt_secret_key_here_must_be_32_chars_minimum
JWT_REFRESH_SECRET=your_refresh_secret_key_here_must_be_32_chars_minimum
